# Telegram API credentials
API_ID=your_api_id
API_HASH=your_api_hash

FILE_PASSWORD=some_random_string
SESSION_NAME=db/user

# Debug settings
DEBUG_MODE=True

# Message handling
LISTEN_OUTGOING_MESSAGES=True
SAVE_EDITED_MESSAGES=False
DELETE_SENT_GIFS_FROM_SAVED=True
DELETE_SENT_STICKERS_FROM_SAVED=True

# Message persistence
PERSIST_TIME_IN_DAYS_BOT=1
PERSIST_TIME_IN_DAYS_USER=1
PERSIST_TIME_IN_DAYS_CHANNEL=1
PERSIST_TIME_IN_DAYS_GROUP=1

# Rate limiting
RATE_LIMIT_NUM_MESSAGES=5

# Log chat
# 转发的目的地频道
LOG_CHAT_ID=

# Ignored IDs (comma separated)
# 被忽略的id，以逗号分隔
IGNORED_IDS=-10000

# Forward settings
# 被转发id，以逗号分隔
FORWARD_USER_IDS=
FORWARD_GROUP_IDS=
FORWARD_MEDIA=True
FORWARD_EDITED=True
ADD_FORWARD_SOURCE=True

# File size limit
MAX_IN_MEMORY_FILE_SIZE=5242880

# --- 删除事件转发速率限制 ---
# 在指定时间窗口内收到多少个删除事件时触发暂停 (默认: 5)
DELETION_RATE_LIMIT_THRESHOLD=5
# 计算删除事件频率的时间窗口（秒）(默认: 60)
DELETION_RATE_LIMIT_WINDOW=60
# 触发暂停后，暂停转发删除通知的持续时间（秒）(默认: 600, 即 10 分钟)
DELETION_PAUSE_DURATION=600

# --- User Bot OpenAI Configuration ---
# (Required) Your OpenAI API key. Get one from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# (Optional) Custom OpenAI API base URL. Leave empty to use the default OpenAI endpoint.
# Useful for proxies or compatible services like local LLMs.
# Example: OPENAI_BASE_URL=http://localhost:11434/v1
OPENAI_BASE_URL=
